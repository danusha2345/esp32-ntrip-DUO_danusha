# ESP32-C6 specific configuration to avoid coexist library issues

# Disable Bluetooth to avoid coexist dependency
CONFIG_BT_ENABLED=n
CONFIG_NIMBLE_ENABLED=n

# WiFi settings (keep enabled as needed for NTRIP)
CONFIG_ESP_WIFI_ENABLED=y

# Disable external coexist
CONFIG_ESP_COEX_EXTERNAL_COEXIST_ENABLE=n

# Since only WiFi is enabled, coexist won't be needed
CONFIG_ESP_COEX_SW_COEXIST_ENABLE=n

# Power management
CONFIG_PM_ENABLE=y
CONFIG_PM_POWER_DOWN_CPU_IN_LIGHT_SLEEP=y
CONFIG_PM_POWER_DOWN_FLASH_IN_LIGHT_SLEEP=n

# Default compiler optimization
CONFIG_COMPILER_OPTIMIZATION_SIZE=y

# Flash and partition settings
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# WiFi specific settings
CONFIG_ESP_WIFI_STATIC_RX_BUFFER_NUM=10
CONFIG_ESP_WIFI_DYNAMIC_RX_BUFFER_NUM=32
CONFIG_ESP_WIFI_STATIC_TX_BUFFER=y
CONFIG_ESP_WIFI_STATIC_TX_BUFFER_NUM=16
CONFIG_ESP_WIFI_AMPDU_TX_ENABLED=y
CONFIG_ESP_WIFI_AMPDU_RX_ENABLED=y
CONFIG_ESP_WIFI_NVS_ENABLED=y

# System settings
CONFIG_ESP_COREDUMP_ENABLE_TO_FLASH=y
CONFIG_ESP_COREDUMP_DATA_FORMAT_ELF=y
CONFIG_ESP_COREDUMP_CHECKSUM_CRC32=y

# Networking
CONFIG_LWIP_SO_REUSE=y
CONFIG_LWIP_SO_RCVBUF=y

# Other standard settings
CONFIG_ESPTOOLPY_FLASHMODE_DIO=y
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y
CONFIG_ESPTOOLPY_MONITOR_BAUD_115200B=y