# ESP32-C6 specific configuration
CONFIG_IDF_TARGET="esp32c6"
CONFIG_IDF_TARGET_ESP32C6=y

# ESP32C6-Specific configurations  
CONFIG_ESP32C6_DEFAULT_CPU_FREQ_160=y
CONFIG_ESP32C6_DEFAULT_CPU_FREQ_MHZ=160

# WiFi 6 support
CONFIG_ESP32_WIFI_ENABLE_WPA3_SAE=y
CONFIG_ESP32_WIFI_ENABLE_WPA3_OWE_STA=y

# Partition table
CONFIG_PARTITION_TABLE_CUSTOM=y 
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# Console configuration for ESP32-C6
CONFIG_ESP_CONSOLE_UART_CUSTOM=y
CONFIG_ESP_CONSOLE_UART_CUSTOM_NUM_0=y
CONFIG_ESP_CONSOLE_UART_NUM=0
CONFIG_ESP_CONSOLE_UART_TX_GPIO=16
CONFIG_ESP_CONSOLE_UART_RX_GPIO=17
CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200

# Power management optimizations
CONFIG_PM_ENABLE=y
CONFIG_PM_DFS_INIT_AUTO=y

# Low power features available on ESP32-C6
CONFIG_ESP32C6_LIGHTSLEEP_GPIO_RESET_WORKAROUND=y